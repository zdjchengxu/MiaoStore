<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <com.zdj.miaostore.customview.RoundRectImageView
                android:id="@+id/iv_head_spacefirst"
                android:layout_width="56dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/friendcicrlebg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:paddingTop="6dp">

            <TextView
                android:text="用户名"
                android:textColor="#2f84c7"
                android:id="@+id/tv_username_spacefirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:text="正文"
                android:id="@+id/tv_content_spacefirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="14sp" />

            <com.zdj.miaostore.customview.MyGridView
                android:id="@+id/gv_imglist_space"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_imglist_one_space"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv_imglist_two_space"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv_imglist_three_space"
                    android:layout_margin="4dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <TextView
                android:text="时间"
                android:textColor="#e1e1e1"
                android:id="@+id/tv_time_spacefirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp" />

            <com.zdj.miaostore.customview.MyListView
                android:padding="6dp"
                android:id="@+id/lv_replylist_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>



    </LinearLayout>

  <View
      android:background="#e1e1e1"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"/>

</LinearLayout>